@using HotelProject.WebUI.Dtos.ConatctDto;
@model GetMessageByIdDto
@{
    ViewData["Title"] = "MessageDetails";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}
<div class="col-lg-12">

    <div class="card-body">
        @await Component.InvokeAsync("_MailboxSideboxComponentPartial")
        <div class="email-right-box">
        
            <div class="read-content">
                <div class="media pt-5">
                    <div class="media-body">
                        <h5 class="m-b-3">@Model.ReciverName</h5>
                        <p class="m-b-2">@(((DateTime)Model.SenderDate).ToString("f"))</p>
                    </div>

                </div>
                <hr>
                <div class="media mb-4 mt-1">
                    <div class="media-body">
                        <h4 class="m-0 text-primary">@Model.Title</h4><small class="text-muted">Kime : @Model.ReciverMail</small>
                    </div>
                </div>
                <h5 class="m-b-15">@Model.Content</h5>
           
            </div>
        </div>
    </div>

</div>


