@using HotelProject.WebUI.Dtos.ConatctDto;
@model List<InboxContactDto>
@{
    ViewData["Title"] = "Inbox";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}


<div class="col-lg-12">
    <div class="card">
        <div class="card-body">
            @await Html.PartialAsync("MailboxSideboxPartial")
            <div class="email-right-box">
                <div class="email-list m-t-15">
                    @foreach (var item in Model)
                    {
                        <div class="message">
                            <a href="email-read.html">
                                <div class="col-mail col-mail-1">
                                    <div class="email-checkbox">
                                        <input type="checkbox" id="chk2">
                                        <label class="toggle" for="chk2"></label>
                                    </div><span class="star-toggle ti-star"></span>
                                </div>
                                <div class="col-mail col-mail-2">
                                    <div class="subject">@(item.MessageContent.Length > 150 ? item.MessageContent.Substring(0,150) + "..." : item.MessageContent)</div>
                                    <div class="date">@(((DateTime)item.Date).ToString("t"))</div>
                                </div>
                            </a>
                        </div>
                    }

                </div>
            </div>
        </div>
    </div>
</div>



