@model List<ResultBookingDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
    int count = 0;
}

<div class="container">

    <div class="table-responsive mt-3">
        <h1 class="card-title text-muted mb-4">Rezarvasyon Listesi</h1>
        <table class="table table-hover mt-4">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Misafir</th>
                    <th scope="col">Giriş Tarihi</th>
                    <th scope="col">Çıkış Tarihi</th>
                    <th scope="col">Durum</th>
                    <th colspan="4" class="text-center" scope="col">İşlemler</th>
                </tr>
            </thead>
            @foreach (var item in Model)
            {
                count++;
                <tbody>
                    <tr>
                        <td>@count</td>
                        <td style="text-transform:capitalize">@item.NameSurname</td>
                        <td>@(((DateTime)item.CheckIn).ToString("f"))</td>
                        <td>@(((DateTime)item.CheckOut).ToString("f"))</td>
                        <td>
                            <span class="badge badge-primary px-2">@item.Status</span>
                        </td>
                        <td style="width:40px">
                            <span>
                                <a href="/AdminBooking/ApprovedReservation/@item.BookingID" data-toggle="tooltip" data-placement="top" title="Onayla"><i class="fa fa-check text-success m-r-5"></i></a>
                            </span>
                        </td>
                        <td style="width:40px">
                            <span>
                                <button onclick="CancelReservation(@item.BookingID)" style="outline:none; border:none; background-color:transparent; cursor:pointer " data-toggle="tooltip" data-placement="top" title="İptal Et"><i class="fa fa-times text-danger"></i></button>
                            </span>

                        </td>
                        <td style="width:40px">
                            <span>
                                <a href="/AdminBooking/WaitReservation/@item.BookingID" data-toggle="tooltip" data-placement="top" title="Onayla"><i class="fa fa-check text-success m-r-5"></i></a>
                            </span>
                        </td>
                        <td style="width:40px">
                            <span>
                                <a href="/AdminBooking/ReservationUpdate/@item.BookingID" data-toggle="tooltip" data-placement="top" title="Onayla"><i class="fa fa-check text-success m-r-5"></i></a>
                            </span>
                        </td>
                    </tr>
                </tbody>

            }

        </table>
    </div>

</div>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script>

    function CancelReservation(id) {
        Swal.fire({
            title: "Kayıt Silme Onayı",
            html: "Rezervasyon iptal edilsin mi?>",
            icon: "info",
            showCancelButton: true,
            confirmButtonColor: "#d33",
            cancelButtonColor: "#3085d6",
            confirmButtonText: "Evet",
            cancelButtonText: "Vazgeç"
        }).then((result) => {
            if (result.isConfirmed) {
                window.location.href = "/AdminBooking/CancelReservation/" + id;
            }
            else {
                Toast.fire({
                    icon: "warning",
                    title: "Rezervasyon iptal etme işlemi iptal edildi."
                });
            }
        });
    }
</script>
@await Html.PartialAsync("~/Views/AdminLayout/NotificationPartial.cshtml")