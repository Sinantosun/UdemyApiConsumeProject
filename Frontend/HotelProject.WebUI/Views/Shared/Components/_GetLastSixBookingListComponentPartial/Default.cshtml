@{
    string cardCss = "";
}

@model List<ResultBookingDto>
<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-body">
                <div class="active-member">
                    <div class="table-responsive">
                        <table class="table table-xs mb-0">
                            <thead>
                                <tr>
                                    <th>Ad Soyad</th>
                                    <th>Şehir</th>
                                    <th>Ülke</th>
                                    <th>Rezervasyon Başlangıç Tarihi</th>
                                    <th>Rezervasyon Bitiş Tarihi</th>
                                    <th>Durumu</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    @if (item.Status == "İptal Edildi")
                                    {
                                        cardCss = "danger";
                                    }
                                    @if (item.Status=="Müşteri Aranacak")
                                    {
                                        cardCss = "warning";
                                    }
                                    @if (item.Status == "Onay Bekliyor")
                                    {
                                        cardCss = "primary";
                                    }
                                    @if (item.Status == "Onaylandı")
                                    {
                                        cardCss = "success";
                                    }
                                    <tr>
                                        <td>@item.NameSurname</td>
                                        <td>@item.City</td>
                                        <td>
                                            <span>@item.Country</span>
                                        </td>
                                        <td>@(((DateTime)item.CheckIn).ToString("dd MMMM dddd")) @(((DateTime)item.CheckIn).ToString("t"))</td>
                                        <td>@(((DateTime)item.CheckOut).ToString("dd MMMM dddd")) @(((DateTime)item.CheckOut).ToString("t"))</td>

                                        <td>
                                            <div>
                                                <div class="progress" style="height: 6px">
                                                    <div class="progress-bar bg-@cardCss" style="width: 100%"></div>
                                                </div>
                                            </div>
                                        </td>
                                        <td><i class="fa fa-circle-o text-@cardCss  mr-2"></i> @item.Status</td>
                                    </tr>
                                }


                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>